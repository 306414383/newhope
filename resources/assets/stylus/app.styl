[v-cloak]
    display none

html
    display unset !important

.layout
    border 1px solid #d7dde4
    background #f5f7f9
    position relative
    border-radius 4px
    overflow hidden
    height 100vh

.layout-logo
    width 100px
    height 30px
    background #5b6270
    border-radius 3px
    float left
    position relative
    top 15px
    left 20px

.ivu-layout-header
    z-index 999
    padding unset

.layout-nav
    position absolute
    right 0
    margin 0 auto
    margin-right 20px

.layout-footer-center
    text-align center

.rounded
    border-radius 6px